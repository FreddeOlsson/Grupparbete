@model ICollection<KalmarBSK.DataAccess.MeetingParticipant>

<table class="table table-hover">
    <tr>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Personer.Namn)</th>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Personer.Adress)</th>
        <th>@Html.DisplayNameFor(x => x.FirstOrDefault().Personer.Telefon)</th>
        <th></th>
    </tr>
    @if (Model.Count > 0)
    {
        for (var i = 0; i < Model.Count; i++)
        {
            <tr class="participants">
                <td>@Html.DisplayFor(x => Model.ToList()[i].Personer.Namn)</td>
                <td>@Html.DisplayFor(x => Model.ToList()[i].Personer.Adress)</td>
                <td>@Html.DisplayFor(x => Model.ToList()[i].Personer.Telefon)</td>

                <td style="vertical-align:middle">
                    @*<a href="#"><span class="glyphicon glyphicon-remove text-danger"></span></a>*@
                    @*@Ajax.ActionLink("Delete", "DeleteParticipant", new { participantId = Model.ToList()[i].Id, meetingId = Model.ToList()[i].GameLocationId }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "delete-p", InsertionMode = InsertionMode.Replace })*@
                    <a href="/Home/DeleteParticipant?participantId=@(Model.ToList()[i].Id)&amp;meetingId=@(Model.ToList()[i].GameLocationId)" data-ajax-update="#delete-p" data-ajax-mode="replace" data-ajax-method="Get" data-ajax="true"><span class="glyphicon glyphicon-remove text-danger"></span></a>
                </td>
            </tr>
        }
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td style="vertical-align:middle"><a href="/Home/GetAvaibleMembers?meetingId=@(Model.ToList()[0].GameLocationId)" data-ajax-update="#members" data-ajax-success="$('#myModal').modal()" data-ajax-mode="replace" data-ajax-method="Get" data-ajax="true"><span class="glyphicon glyphicon-plus text-success"></span></a></td>
    </tr>
</table>
