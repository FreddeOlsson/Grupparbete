@model IEnumerable<KalmarBSK.DataAccess.Meeting>







<div class="row">
    <div class="col-lg-12">
        @using (Ajax.BeginForm("SearchFilter", "Home", new AjaxOptions { UpdateTargetId = "search-filter-result", InsertionMode = InsertionMode.Replace }))
        {

            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for..." name="search">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Go!</button>
                </span>
            </div>



        }
    </div>
</div>

<div class="row">
    <div class="col-lg-12" id="search-filter-result">

        @if (Model != null)
        {
            <table class="table table-hover">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Date)</th>
                    <th>@Html.DisplayNameFor(x => x.Location)</th>
                    <th>@Html.DisplayNameFor(x => x.Participants)</th>
                </tr>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@Html.DisplayFor(x => item.Date)</td>
                        <td>@Html.DisplayFor(x => item.Location)</td>
                        <td>@Html.DisplayFor(x => item.Participants)</td>
                    </tr>


                }
            </table>
        }
        
    </div>
</div>