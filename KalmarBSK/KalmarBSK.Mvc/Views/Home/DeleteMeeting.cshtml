@model KalmarBSK.DataAccess.GameLocation

@{
    ViewBag.Title = "DeleteMeeting";
}

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-danger">
            <div class="panel-heading"><h2><span class="glyphicon glyphicon-trash"></span> Ta bort möte</h2></div>
            <div class="panel-body">
                <h3>Är du säker på att du vill ta bort detta möte?</h3>
                <hr />
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Adress)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Adress)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Datum)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Datum)
                        </dd>

                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Ta bort" class="btn btn-default" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
